<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UtilitiesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:clickable="false"
            android:id="@+id/last_split_header"
            android:text="Last split : No split yet"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/button_split_now"
            android:text="SPLIT NOW"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:clickable="false"
            android:paddingStart="15dp"
            android:id="@+id/add_supplies_empty_header"
            android:text="  "
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:clickable="false"
            android:paddingStart="15dp"
            android:id="@+id/add_supplies_header"
            android:text="Add household supplies"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/add_name_of_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="name of product"
            android:paddingBottom="15dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/add_price_of_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="price of product (only digits)"
            android:paddingBottom="15dp"
            android:inputType="text"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/button_add_household_supplies"
            android:text="ADD"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/button_view_list_of_supplies"
            android:text="VIEW LIST OF HOUSEHOLD SUPPLIES"
            android:background="@color/transparent"
            android:textColor="@color/colorPrimaryDark"/>



    </LinearLayout>

</FrameLayout>